{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@mondo/components/*": [
        "components/*"
      ],
      "@mondo/generated": [
        "generated"
      ],
      "@mondo/generated/*": [
        "generated/*"
      ],
      "@mondo/i18n/*": [
        "i18n/*"
      ],
      "@mondo/layouts/*": [
        "layouts/*"
      ],
      "@mondo/pages/*": [
        "pages/*"
      ],
      "@mondo/typings": [
        "typings"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}